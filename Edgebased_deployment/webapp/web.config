<!-- Configuration file: Do not modify this file, unless you don't want to
      rename files and move folders. -->
<configuration>
  <system.webServer>

    <!-- specify that the index.js file is a node.js application
    to be handled by the iisnode module -->

    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- adds server.js to the default document list to allow
    URLs that only specify the application root location,
    e.g. http://mysite.antarescloud.com/ -->

    <defaultDocument enabled="true">
      <files>
        <add value="server.js" />
      </files>
    </defaultDocument>

  </system.webServer>
</configuration>
